<%= form_for @product do |f| %>
  <%= render "shared/errors", object: @product %>
  <div class="form-group">
    <%= f.text_field :name, required: true, placeholder: 'Product Name', class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_field :cost, required: true, placeholder: 'Product Cost', class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_field :country_of_origin, required: true, placeholder: 'Country of Origin', class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>

<%= link_to 'Home', root_path %>